<h4>予約一覧</h4>
<div class="admin-reservations">
  <div class="row">
    <h5 class="col-2"><%= sort_order "id", "予約番号" %></h5>
    <h5 class="col-2"><%= sort_order "guest_name", "名前" %></h5>
    <h5 class="col-2"><%= sort_order "room_name", "部屋" %></h5>
    <h5 class="col-3"><%= sort_order "start_date", "到着日" %></h5>
    <h5 class="col-3"><%= sort_order "end_date", "出発日" %></h5>
  </div>
  <% @reservations.each do |reservation| %>
    <%= link_to  admin_reservation_path(reservation) do %>
      <div class="row">
        <p class="col-2"><%= reservation.id %></p>
        <p class="col-2"><%= reservation.guest.name %></p>
        <p class="col-2"><%= reservation.room.name %></p>
        <p class="col-3"><%= reservation.start_date %></p>
        <p class="col-3"><%= reservation.end_date %></p>
      </div>
    <% end %>
  <% end %>
</div>
<%= paginate @reservations %>
