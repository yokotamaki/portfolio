<div class="room-wrapper">
  <%= form_with model: Reservation.new, url: guest_reservations_path, local: true do |f| %>
    <div class="room">
      <% rooms.each do |room| %>
        <%= f.radio_button :room_id, room.id, required: true %>
        <label for="reservation_room_id_<%= room.id %>">
          <%= image_tag room.image, width: "90%" %>
          <p><%= room.name %></p>
          <p><%= room.price %>円</p>
          <p>定員<%= room.people %>名</p>
        </label>
      <% end %>
    </div>
    <%= f.hidden_field :start_date, value: start_date %>
    <%= f.hidden_field :end_date, value: end_date %>
    <%= f.hidden_field :people, value: people %>
    <%= f.submit "情報入力へ", class: "button" %>
  <% end %>
</div>