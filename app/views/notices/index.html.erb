<h4>お知らせ一覧</h4>
<% @notices.each do |notice| %>
<div class="notices">
<%= link_to notice_path(notice) do %>
  <% if notice.images.attached? %>
    <% notice.images.each do |image| %>
      <%= image_tag image.variant(resize: '500x500').processed %> <br>
    <% end %>
  <% end %>
  <div class="notices-content">
    <p class="tag"><%= notice.tag %></p>
    <p>タイトル</p>
    <p><%= notice.title %></p>
    <p>内容</p>
    <p><%= notice.body %></p>
    <p>投稿日　<%= notice.updated_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
  </div>
<% end %>
</div>
<% end %>
